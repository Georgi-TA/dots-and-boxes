<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/box_unselected"
        android:gravity="center"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp"/>

    <item android:gravity="bottom|left">
        <inset android:drawable="@drawable/dot"/>
    </item>

    <item android:gravity="bottom|right">
        <inset android:drawable="@drawable/dot"/>
    </item>

    <item android:gravity="top|left">
        <inset android:drawable="@drawable/dot"/>
    </item>

    <item android:gravity="top|right">
        <inset android:drawable="@drawable/dot"/>
    </item>

</layer-list>