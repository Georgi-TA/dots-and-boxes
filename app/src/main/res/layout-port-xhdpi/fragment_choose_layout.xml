<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.touchawesome.dotsandboxes.fragments.ChooseModeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:clipChildren="false"
        android:showDividers="middle"
        android:layout_centerVertical="true"
        android:divider="@drawable/list_divider">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_choose_board_size"
            android:textColor="@color/textColorPrimaryDark"
            android:textSize="28sp"
            android:gravity="center_horizontal"
            android:text="@string/choose_board_size"/>

        <Button
            android:id="@+id/buttonPlayThreeByThree"
            style="@style/MenuLayoutButton"
            android:text="@string/three_by_three" />

        <Button
            android:id="@+id/buttonPlayFourByFour"
            style="@style/MenuLayoutButton"
            android:text="@string/four_by_four" />

        <Button
            android:id="@+id/buttonPlayFiveByFive"
            style="@style/MenuLayoutButton"
            android:text="@string/five_by_five" />
    </LinearLayout>
</RelativeLayout>