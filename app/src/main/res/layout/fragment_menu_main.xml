<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.scelus.dotsandboxes.fragments.MainMenuFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:dividerPadding="16dp"
        android:layout_marginTop="32dp">

        <Button
            android:text="@string/menu_option_play_local"
            android:id="@+id/buttonPlayLocal"
            style="@style/MenuButton"/>

        <Button
            android:text="@string/menu_option_play_network"
            android:id="@+id/buttonPlayNetwork"
            style="@style/MenuButton"/>

    </LinearLayout>

</RelativeLayout>
