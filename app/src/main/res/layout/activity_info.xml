<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:baselineAligned="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/info_text_section_1"
            android:text="@string/info_text_section_1"
            style="@style/InfoText" />

        <TextView
            android:id="@+id/info_text_section_2"
            android:text="@string/info_text_section_2"
            style="@style/InfoText" />

        <TextView
            android:id="@+id/info_text_section_3"
            android:text="@string/info_text_section_3"
            android:gravity="end"
            style="@style/InfoText" />
    </LinearLayout>
</LinearLayout>