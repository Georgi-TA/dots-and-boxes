<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="64dp"
    android:background="@drawable/box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_button_medal"/>

        <TextView
            android:id="@+id/winner_title"
            style="@style/ScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/winner" />

        <TextView
            android:id="@+id/winner_name"
            style="@style/ScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/winner_score"
            style="@style/ScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="12 points"
            android:textSize="28dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/replay_button"
                style="@style/WinnerMenuButton"
                app:srcCompat ="@drawable/ic_icon_rematch" />

            <ImageButton
                android:id="@+id/winner_menu_button"
                style="@style/WinnerMenuButton"
                app:srcCompat ="@drawable/ic_icon_menu" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>