<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_player2_box_active"
        android:gravity="center"
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

    <item android:gravity="bottom|left">
        <inset android:drawable="@drawable/dot_player2_active"/>
    </item>

    <item android:gravity="bottom|right">
        <inset android:drawable="@drawable/dot_player2_active"/>
    </item>

    <item android:gravity="top|left">
        <inset android:drawable="@drawable/dot_player2_active"/>
    </item>

    <item android:gravity="top|right">
        <inset android:drawable="@drawable/dot_player2_active"/>
    </item>

</layer-list>