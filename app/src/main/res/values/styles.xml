<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/textColorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryDark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorControlNormal">@color/primary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Base application theme. -->
    <style name="GameTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryDark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorControlNormal">@color/textColorPrimary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Settings application theme. -->
    <style name="SettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryDark</item>
        <item name="android:colorBackground">@color/background_settings</item>
        <item name="android:windowBackground">@color/background_settings</item>
        <item name="android:textSize">18sp</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="colorAccent">@color/textColorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/textColorPrimaryDark</item>
        <item name="colorControlActivated">#46bdbf</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">@color/settings_icons</item>
        <item name="android:colorPrimary">@color/background_settings</item>
        <item name="android:colorPrimaryDark">@color/background_settings</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="ScoreView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ScoreViewVertical" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PlayerName" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>

    <style name="NetworkMenuButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_menu_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="MenuButton">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:background">@drawable/bg_menu_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MenuLayoutButton">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:background">@drawable/bg_menu_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="MenuTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>

    <style name="PlayerImage">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="PlayerImageBorder">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="WinnerMenuButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:background">@drawable/ic_svg_square_icons</item>
    </style>

    <style name="BottomBarButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/ic_svg_square_icons</item>
        <item name="android:tint">@color/menu_icons</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
