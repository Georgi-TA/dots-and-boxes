<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.touchawesome.dotsandboxes.fragments.MainMenuFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true">

            <Button
                android:text="@string/three_by_three"
                android:id="@+id/buttonPlayThreeByThree"
                style="@style/MenuLayoutButton" />

            <Button
                android:text="@string/four_by_four"
                android:id="@+id/buttonPlayFourByFour"
                style="@style/MenuLayoutButton"/>

            <Button
                android:text="@string/five_by_five"
                android:id="@+id/buttonPlayFiveByFive"
                style="@style/MenuLayoutButton" />
    </LinearLayout>
</RelativeLayout>
