<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.blackbear.scelus.dotsandboxes.bg.scelus.dotsandboxes.fragments.GameLocalFragment">

    <info.scelus.dotsandboxes.views.BoardView
        android:id="@+id/boardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:id="@+id/scoreLayout"
        android:layout_toEndOf="@+id/boardView"
        android:layout_toRightOf="@+id/boardView"
        android:layout_alignTop="@+id/boardView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
