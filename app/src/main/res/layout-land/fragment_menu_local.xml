<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.scelus.dotsandboxes.fragments.MainMenuFragment">

    <TextView
        android:id="@+id/mainLocalTitleText"
        style="@style/MenuTitle"
        android:textSize="50sp"
        android:text="@string/menu_title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mainLocalTitleText"
        android:dividerPadding="16dp"
        android:layout_marginTop="32dp">

        <Button
            android:text="@string/menu_option_play_local_cpu"
            android:id="@+id/buttonPlayLocalComputer"
            style="@style/MenuButton" />

        <Button
            android:text="@string/menu_option_play_local_player"
            android:id="@+id/buttonPlayLocalPlayer"
            style="@style/MenuButton" />

    </LinearLayout>

</RelativeLayout>
