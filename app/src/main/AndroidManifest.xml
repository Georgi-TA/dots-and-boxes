<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.touchawesome.dotsandboxes">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.touchawesome.dotsandboxes.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="com.touchawesome.dotsandboxes.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.touchawesome.dotsandboxes.activities.NetworkPlayActivity">
        </activity>

        <activity
            android:name="com.touchawesome.dotsandboxes.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.touchawesome.dotsandboxes.activities.MainActivity" />
        </activity>

        <service
            android:name="com.touchawesome.dotsandboxes.services.MusicIntentService"
            android:exported="false"
            android:enabled="true"/>

    </application>

</manifest>